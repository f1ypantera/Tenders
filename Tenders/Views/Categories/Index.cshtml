@model IEnumerable<Tenders.Models.Category>


</br>
<div class="form-group">

    <a class="btn btn-default" href=" @Url.Action("Create", "Categories")">Создать новую категорию</a>

</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ListCategory)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ListCategory)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.CategoryID }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.CategoryID })
            </td>
        </tr>
    }

</table>
